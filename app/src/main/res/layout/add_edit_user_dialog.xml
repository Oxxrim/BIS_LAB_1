<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Login: " />

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Block: " />


        <TextView
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Limitations: " />


        <TextView
            android:id="@+id/limitations"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/addEditUser"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>